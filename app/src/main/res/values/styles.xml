<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DialogTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/purple_accent</item>
    </style>

    <style name="DialogMessageStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="titleTextAppearance">@style/DialogTitleStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyDialog</item>
    </style>



    <style name="ShapeAppearance.MyDialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_accent</item>
    </style>

</resources>